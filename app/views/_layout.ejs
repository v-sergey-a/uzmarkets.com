<!DOCTYPE html>

<html>

<head>
    <title>
        UzMarkets.com
    </title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/_main.css">
</head>

<body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">UzMarkets</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" data-toggle="modal" data-target="#authorization-form">Войти в кабинет</a>
                </li>
            </ul>
        </div>
        <!-- /.container -->
    </nav>
    <!-- /.navbar -->

    <div class="modal fade" id="authorization-form">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title">Войти в кабинет</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Пароль</label>
                            <input type="email" class="form-control">
                        </div>
                        <a href="#">Восстановить пароль</a>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Готово</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal #authorization-form -->

    <%- body %>

        <script src="/js/jquery-2.1.1.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
</body>

</html>
